    <div class="row">
        <div class="col-md-4">
            <li> burgers</li>
            {{#each data}} 
            {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class="change-devoured" data-id="{{id}}">
                    Devoured
                </button>
            </li>
            {{/unless}}
            {{/each}}

          
        </div>
        <div class="col-md-4">
            <form action="/index" method="POST">
                <textarea type="text" name="name"></textarea>
                <button type="submit">Submit</button>
            </form>
        </div>
        <div class="col-md-4">

            {{#each data}} 
            {{#if devoured}}
            <li>
                {{burger_name}}
              
            </li>
            {{/if}}
            {{/each}}


        </div>
    </div>
</div>